<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/heading_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:textColor="#63add0"
        android:gravity="center"
        android:text="TARGET"
        android:textSize="40sp" />

    <edu.grinnell.facetag.utils.RoundedImageView
        android:id="@+id/target_photo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        class="edu.grinnell.facetag.utils.RoundedImageView"
        android:baselineAlignBottom="true"
        android:gravity="center|center_horizontal"
        android:scaleType="fitCenter" />
    
     <TextView
         android:id="@+id/target_description"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:layout_marginTop="25dp"
         android:textSize="20sp"
         android:textColor="#808080"
         android:gravity="center_horizontal"
         android:text="" />

     <ImageView
         android:id="@+id/camera_info"
         android:layout_width="70dp"
         android:layout_height="70dp"
         android:layout_marginTop="15dp"
         android:layout_gravity="center_horizontal" />

</LinearLayout>