<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="#63add0"/>

    <TextView
        android:id="@+id/num_pics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="No Pictures"
        android:textSize="14sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="#63add0" />

    <edu.grinnell.facetag.utils.RoundedImageView
        android:id="@+id/eval_photo"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:gravity="center"
        android:scaleType="fitCenter" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="#63add0"/>

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:gravity="center_horizontal"
        android:text="No More Photos to Rank"
        android:textSize="20sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="#63add0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/affirmative"
            android:layout_width="75dip"
            android:layout_height="45dip"
            android:layout_gravity="left"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/rec_button"
            android:text="Yes" />

        <Button
            android:id="@+id/negative"
            android:layout_width="75dip"
            android:layout_height="45dip"
            android:layout_gravity="right"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/rec_button"
            android:text="No" />
    </LinearLayout>

</LinearLayout>