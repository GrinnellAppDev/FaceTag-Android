<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/White"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CreateGameActivity" >

    <EditText
        android:id="@+id/name_field"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:hint="Game Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/max_points"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:hint="Max points"
        android:layout_alignLeft="@+id/name_field"
        android:layout_below="@+id/name_field"
        android:layout_marginTop="62dp"
        android:inputType="numberSigned"
        android:ems="10" />
    
     <EditText
        android:id="@+id/max_time"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/submit"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/max_points"
        android:ems="10"
        android:hint="Max time(hours)"
        android:inputType="numberSigned" />

    <Button
        android:id="@+id/submit"
        android:layout_width="90dip"
        android:layout_height="60dip"
        android:layout_alignLeft="@+id/max_points"
        android:layout_below="@+id/max_points"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="89dp"
        android:background="@drawable/rec_button"
        android:text="Begin Game" />

    <Button
        android:id="@+id/invite_button"
        android:layout_width="75dip"
        android:layout_height="75dip"
        android:layout_alignBottom="@+id/submit"
        android:layout_alignRight="@+id/max_time"
        android:layout_marginRight="9dp"
        android:background="@drawable/rec_button"
        android:text="Invite Players" />

 

</RelativeLayout>