<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CreateGameActivity" >

    <EditText
        android:id="@+id/name_field"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:hint="Game Name"
        android:inputType="text" />

    <TextView
        android:id="@+id/prompt"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/name_field"
        android:layout_marginTop="25dp"
        android:text="Points til Win:"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/points_win"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prompt" />

    <Button
        android:id="@+id/submit"
        android:layout_width="75dip"
        android:layout_height="75dip"
        android:layout_alignLeft="@+id/points_win"
        android:layout_alignRight="@+id/points_win"
        android:layout_below="@+id/points_win"
        android:layout_marginTop="43dp"
        android:background="@drawable/rec_button"
        android:text="Begin Game" />

</RelativeLayout>